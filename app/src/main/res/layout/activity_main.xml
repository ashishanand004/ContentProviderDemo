<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_name"
        android:hint="name"
        android:paddingTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_grade"
        android:hint="grade"
        android:layout_below="@+id/editText_name"
        android:layout_alignLeft="@+id/editText_name"
        android:layout_alignStart="@+id/editText_name"
        android:layout_alignRight="@+id/editText_name"
        android:layout_alignEnd="@+id/editText_name"/>
    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add name"
        android:onClick="onClickAddName"
        android:layout_below="@+id/editText_grade"
        android:layout_alignRight="@+id/editText_grade"
        android:layout_alignEnd="@+id/editText_grade"
        android:layout_alignLeft="@+id/editText_grade"
        android:layout_alignStart="@+id/editText_grade"/>
    <Button
        android:id="@+id/fetch_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fetch name"
        android:onClick="onClickFetchName"
        android:layout_below="@+id/add_button"
        android:layout_alignRight="@+id/editText_grade"
        android:layout_alignEnd="@+id/editText_grade"
        android:layout_alignLeft="@+id/editText_grade"
        android:layout_alignStart="@+id/editText_grade"/>

</RelativeLayout>